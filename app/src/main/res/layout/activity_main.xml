<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_teal_pink"
    android:orientation="vertical"
    android:paddingTop="30dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/containerLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/containerStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tvLastSync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Last Synced : "
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:paddingBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/containerDetails"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/containerLocation">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Status"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:text="0 Â°C"
                android:textSize="60sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTempMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Min : "
                    android:textSize="16sp" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvTempMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Max : "
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="16dp"
            android:paddingVertical="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/containerStatus">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerSunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_teal_pink"
                android:backgroundTint="#B3B5DD"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/containerPressure"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivSunrise"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sunrise"
                    app:layout_constraintLeft_toLeftOf="@+id/containerSunrise"
                    app:layout_constraintRight_toRightOf="@id/containerSunrise"
                    app:layout_constraintTop_toTopOf="@+id/containerSunrise" />

                <TextView
                    android:id="@+id/tvSunrise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Sunrise"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="@id/containerSunrise"
                    app:layout_constraintRight_toRightOf="@id/containerSunrise"
                    app:layout_constraintTop_toBottomOf="@id/ivSunrise" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_teal_pink"
                android:backgroundTint="#B3B5DD"
                app:layout_constraintBottom_toTopOf="@id/containerHumidity"
                app:layout_constraintLeft_toRightOf="@id/containerSunrise"
                app:layout_constraintRight_toLeftOf="@id/containerSunset"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivPressure"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/pressure"
                    app:layout_constraintLeft_toLeftOf="@+id/containerPressure"
                    app:layout_constraintRight_toRightOf="@id/containerPressure"
                    app:layout_constraintTop_toTopOf="@+id/containerPressure" />

                <TextView
                    android:id="@+id/tvPressure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Pressure"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="@id/containerPressure"
                    app:layout_constraintRight_toRightOf="@id/containerPressure"
                    app:layout_constraintTop_toBottomOf="@id/ivPressure" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerSunset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_teal_pink"
                android:backgroundTint="#B3B5DD"
                app:layout_constraintLeft_toRightOf="@id/containerPressure"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivSunset"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sunset"
                    app:layout_constraintLeft_toLeftOf="@+id/containerSunset"
                    app:layout_constraintRight_toRightOf="@id/containerSunset"
                    app:layout_constraintTop_toTopOf="@+id/containerSunset" />

                <TextView
                    android:id="@+id/tvSunset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Sunset"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="@id/containerSunset"
                    app:layout_constraintRight_toRightOf="@id/containerSunset"
                    app:layout_constraintTop_toBottomOf="@id/ivSunset" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_teal_pink"
                android:backgroundTint="#A2B8E3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/containerHumidity"
                app:layout_constraintTop_toBottomOf="@id/containerSunrise">

                <ImageView
                    android:id="@+id/ivWind"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/wind"
                    app:layout_constraintLeft_toLeftOf="@+id/containerWind"
                    app:layout_constraintRight_toRightOf="@id/containerWind"
                    app:layout_constraintTop_toTopOf="@+id/containerWind" />

                <TextView
                    android:id="@+id/tvWind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Wind"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="@id/containerWind"
                    app:layout_constraintRight_toRightOf="@id/containerWind"
                    app:layout_constraintTop_toBottomOf="@id/ivWind" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_teal_pink"
                android:backgroundTint="#A2B8E3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/containerWind"
                app:layout_constraintRight_toLeftOf="@id/containerRefresh"
                app:layout_constraintTop_toBottomOf="@id/containerPressure">

                <ImageView
                    android:id="@+id/ivHumidity"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/humidity"
                    app:layout_constraintLeft_toLeftOf="@+id/containerHumidity"
                    app:layout_constraintRight_toRightOf="@id/containerHumidity"
                    app:layout_constraintTop_toTopOf="@+id/containerHumidity" />

                <TextView
                    android:id="@+id/tvHumidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Humidity"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="@id/containerHumidity"
                    app:layout_constraintRight_toRightOf="@id/containerHumidity"
                    app:layout_constraintTop_toBottomOf="@id/ivHumidity" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_teal_pink"
                android:backgroundTint="#A2B8E3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/containerHumidity"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/containerSunset">

                <ImageView
                    android:id="@+id/ivRefresh"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/refresh"
                    app:layout_constraintLeft_toLeftOf="@+id/containerRefresh"
                    app:layout_constraintRight_toRightOf="@id/containerRefresh"
                    app:layout_constraintTop_toTopOf="@+id/containerRefresh" />

                <TextView
                    android:id="@+id/tvRefresh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Refresh"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="@id/containerRefresh"
                    app:layout_constraintRight_toRightOf="@id/containerRefresh"
                    app:layout_constraintTop_toBottomOf="@id/ivRefresh" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerZipUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="24dp"
        android:visibility="gone">


        <EditText
            android:id="@+id/etZip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Enter your zip code here"
            android:inputType="number"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivReload"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivReload"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/refresh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/etZip"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/ivInfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/info" />


    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tvErrorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Something went wrong."
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>
